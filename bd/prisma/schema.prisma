generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // or "postgresql"
  url      = env("DATABASE_URL")
}
// We also need to add the forgiveness tokens to the user model 
model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  dp       String? // Profile image
  tasks    Task[]  // Your existing relation
  streaks  Streak[]
  journalEntries JournalEntry[]
  forgivenessTokens Int @default(2)
}
//And connect the new models back to Task and User 
model Task {
  id        Int      @id @default(autoincrement())
  text      String
  completed Boolean  @default(false)
  deadline  DateTime
  progress  Int      @default(0)
  total     Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  streaks   Streak[]
  journalEntries  JournalEntry[]
  @@index([userId])
}

model Streak {
  id       Int     @id @default(autoincrement())
  userId   Int      
  user     User    @relation(fields: [userId], references: [id])
  taskId   Int     
  task     Task    @relation(fields: [taskId] , references: [id])
  count    Int     @default(0) // How long the strek is 
  lastUpdated DateTime @updatedAt

  @@ unique([userId , taskId]) // A user can only have one streak per task 
}

model JournalEntry {
  id     Int @id @default(autoincrement())
  userId  Int 
  user    User  @relation(fields: [userId] , references:[id])
  taskId   Int?  // the task associated with the streak  break 
  task  Task? @relation(fields:[taskId], references: [id])
  reason String //"What was the main reason you missed your goal?"
  mitigation String//"What's one thing you could change?"
  createdAt  DateTime @default(now())

}